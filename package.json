{
  "name": "graphbrainz-extension-spotify",
  "version": "0.3.0",
  "description": "Spotify GraphQL extension for GraphBrainz.",
  "keywords": [
    "graphbrainz",
    "extension",
    "musicbrainz",
    "graphql",
    "spotify"
  ],
  "homepage": "https://github.com/exogen/graphbrainz-extension-spotify",
  "author": {
    "name": "Brian Beck",
    "email": "exogen@gmail.com",
    "url": "http://brianbeck.com/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.18.0"
  },
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "npm run build:docs",
    "build:docs": "node scripts/build-docs.js",
    "deploy": "git push heroku master",
    "format": "npm run lint:fix",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "start": "node scripts/start.js",
    "start:dev": "nodemon scripts/start.js",
    "test": "npm run lint && npm run test:coverage",
    "test:cache": "cross-env NOCK_MODE=cache ava --concurrency 1 --update-snapshots",
    "test:coverage": "cross-env NODE_ENV=test c8 --all npm run test:only",
    "test:live": "cross-env NOCK_MODE=live ava --concurrency 1",
    "test:only": "ava",
    "test:preview": "cross-env NOCK_MODE=preview ava --concurrency 1",
    "test:record": "cross-env NOCK_MODE=record ava --concurrency 1 --update-snapshots"
  },
  "lint-staged": {
    "*.{cjs,js}": [
      "eslint --fix"
    ]
  },
  "ava": {
    "require": [
      "dotenv/config"
    ],
    "files": [
      "src/**/*.test.js",
      "test/**/*.test.js"
    ]
  },
  "ava-nock": {
    "headerFilter": {
      "Authorization": [
        "^(Bearer|Basic) .+$",
        "$1 <token>"
      ]
    },
    "responseBodyFilter": [
      "(\"access_token\":\\s*)\"[^\"]+\"",
      "$1\"<token>\""
    ]
  },
  "peerDependencies": {
    "graphbrainz": "^9.0.0"
  },
  "dependencies": {
    "dataloader": "^2.0.0",
    "debug": "^4.3.1",
    "graphql-relay": "^0.6.0",
    "lodash.chunk": "^4.2.0",
    "lodash.maxby": "^4.6.0",
    "lru-cache": "^6.0.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "ava-nock": "^2.1.0",
    "c8": "^7.7.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^5.1.0",
    "graphbrainz": "^9.0.0",
    "graphql": "^15.5.0",
    "graphql-markdown": "^6.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
